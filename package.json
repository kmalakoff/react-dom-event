{
  "name": "react-dom-event",
  "version": "1.0.6",
  "description": "React context for subscribing to all DOM user interaction events",
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web",
    "dom",
    "outside",
    "click",
    "press",
    "touch",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kmalakoff/react-dom-event.git"
  },
  "license": "MIT",
  "author": "Kevin Malakoff <kmalakoff@gmail.com> (https://github.com/kmalakoff)",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json",
    "./umd": "./dist/umd/react-dom-event.cjs"
  },
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsds build",
    "docs": "tsds docs",
    "format": "biome check --write --unsafe",
    "prepublishOnly": "tsds validate",
    "test": "tsds test:browser --config wtr.config.mjs",
    "test:engines": "tsds test:browser --config wtr.config.mjs",
    "version": "tsds version"
  },
  "devDependencies": {
    "@biomejs/biome": "*",
    "@types/mocha": "*",
    "@types/node": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@web/dev-server-import-maps": "*",
    "jsdom": "*",
    "node-version-use": "*",
    "react": "*",
    "react-dom": "*",
    "ts-dev-stack": "*",
    "tsds-web-test-runner": "*"
  },
  "peerDependencies": {
    "react": "*"
  },
  "engines": {
    "node": ">=16"
  },
  "tsds": {
    "source": "src/index.ts",
    "targets": [
      "cjs",
      "esm",
      "umd"
    ],
    "globals": {
      "react": "React"
    }
  }
}
