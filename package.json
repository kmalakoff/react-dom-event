{
  "name": "react-dom-event",
  "version": "0.1.4",
  "description": "React context for subscribing to all DOM user interaction events",
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web",
    "dom",
    "outside",
    "click",
    "press",
    "touch",
    "typescript"
  ],
  "repository": "kmalakoff/react-dom-event",
  "license": "MIT",
  "author": "Kevin Malakoff <kmalakoff@gmail.com> (https://github.com/kmalakoff)",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./*": "./*"
  },
  "main": "dist/cjs/index.js",
  "unpkg": "dist/umd/react-dom-event.js",
  "module": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsds build",
    "deploy": "tsds deploy",
    "format": "biome check --apply-unsafe src/ test/",
    "test": "npm run test:node && tsds test:browser",
    "test:engines": "nvu engines npm run test:node && tsds test:browser",
    "test:node": "tsds link && tsx node_modules/.bin/mocha test/**/*.tsx",
    "version": "tsds version"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "jsdom": "9.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-native-web": "^0.19.10",
    "ts-dev-stack": "^0.9.10",
    "tsx": "^4.7.1"
  },
  "peerDependencies": {
    "react": "*"
  },
  "engines": {
    "node": ">=14"
  },
  "tsds": {
    "source": "src/index.ts",
    "globals": {
      "react": "React"
    }
  }
}
